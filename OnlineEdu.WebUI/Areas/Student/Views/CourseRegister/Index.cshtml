@model List<ResultCourseRegisterDto>
@{
    ViewData["Title"] = "Kayıtlı Olduğum Kurslar";
    Layout = "~/Areas/Student/Views/StudentLayout/_StudentLayout.cshtml";
}

@{
	int count = 0;
}
<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Resim</th>
		<th>Kurs Adı</th>
		<th>Eğitmen</th>
		<th>Kategori</th>
		<th>İşlemler</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<td>@count</td>
			<td><img src="@item.Course.ImageUrl" style="width:75px;height:75px" /></td>
			<td>@item.Course.CourseName</td>
			<td>@item.Course.AppUser.FirstName @item.AppUser.LastName</td>
			<td>@item.Course.Category.Name</td>
			<td>
				<a asp-action="CourseVideos" asp-controller="CourseRegister" asp-area="Student" asp-route-id="@item.CourseId" class="btn btn-outline-info">Kurs Videoları</a>
			</td>
		</tr>
	}
</table>
<br>

<a asp-action="RegisterCourse" asp-controller="CourseRegister" asp-area="Student" class="btn btn-outline-primary">Yeni Kurs Kayıt Ol</a>
