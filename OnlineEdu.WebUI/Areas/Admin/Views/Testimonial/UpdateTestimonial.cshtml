@model UpdateTestimonialDto
@{
	ViewData["Title"] = "Referans Güncelleme Sayfası";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
	<input type="hidden" asp-for="TestimonialId">
	<label>Ad Soyad</label>
	<input type="text" asp-for="Name" class="form-control">
	<span asp-validation-for="Name" class="text-danger" />
	<br>
	<label>Unvan</label>
	<input type="text" asp-for="Description" class="form-control">
	<span asp-validation-for="Description" class="text-danger" />
	<br>
	<label>Resim URL</label>
	<input type="text" asp-for="ImageUrl" class="form-control">
	<span asp-validation-for="ImageUrl" class="text-danger" />
	<br>
	<label>Yorum</label>
	<textarea type="text" asp-for="Comment" rows="3" class="form-control"></textarea>
	<span asp-validation-for="Comment" class="text-danger" />
	<br>
	<label>Puan (5 Üzerinden)</label>
	<input type="text" asp-for="Star" class="form-control">
	<span asp-validation-for="Star" class="text-danger" />
	<br>
	<button class="btn btn-outline-primary">Güncelle</button>
</form>
